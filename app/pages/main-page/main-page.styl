/*---Styles for content of main-page----*/
.main-content
	background url('/assets/images/background.png') no-repeat 0 0
	background-size cover
	display table-row
	font-size 18px
	height 100%
	line-height 18px
	z-index 11
	&__wrapper
		display flex
		margin-left auto
		margin-right auto
		max-width 1024px
		padding-bottom 35px
		padding-top 35px
		width 100%
		@media only screen and (max-width: 1024px)
			width 95%
			flex-direction column
		@media only screen and (max-width: 768px)
			width 93%
			flex-direction column-reverse
		.about-me
			margin-right 60px
			width 26%
			@media only screen and (max-width: 1024px)
				margin-right 0
				width 100%
				display flex
			@media only screen and (max-width: 768px)
				flex-direction column-reverse
				align-items flex-end
		.main-info
			width 70%
			@media only screen and (max-width: 1024px)
				width 100%
			@media only screen and (max-width: 768px)
				margin-bottom 25px
			&__block
				background-color #eff3f7
				border-radius 5px
				margin-bottom 25px
				width 100%
/*---Styles elements for block of about-me----*/
.about-me
	.content-menu
		background-color #eff3f7
		border-radius 3px
		margin-bottom 25px
		@media only screen and (max-width: 1024px)
			width 50%
			margin-right 5%
		@media only screen and (max-width: 768px)
			display none
		&__item
			cursor pointer
			display inline-block
			line-height 73px
			padding-left 10px
			padding-right 10px
			position relative
			width 100%
			@media only screen and (max-width: 768px)
				border-right 2px solid #3ba8c0
			@media only screen and (max-width: 480px)
				border-right none
			&:after
				background-color #3ba8c0
				bottom 0
				content ''
				height 2px
				left 10px
				position absolute
				right 10px
				@media only screen and (max-width: 768px)
					content none
				@media only screen and (max-width: 480px)
					content ''
			&:first-child
				border-top-left-radius 5px
				border-top-right-radius 5px
				@media only screen and (max-width: 768px)
					border-bottom-left-radius 5px
					border-top-right-radius 0
			&:last-child
				border-bottom-left-radius 5px
				border-bottom-right-radius 5px
				@media only screen and (max-width: 768px)
					border-bottom-left-radius 0
					border-top-right-radius 5px
					border-right none
				&:after
					height 0
			.item-link
				color #959aa8
				display inline-block
				padding-left 10px
				padding-right 10px
				width 100%
				&__inner
					display inline-block
					line-height 18px
					vertical-align middle
			&:hover
				.item-link
					color #3ba8c0
		.active-item
			background-color #3ba8c0
			cursor default
			.item-link
				color #fff
			&:hover
				.item-link
					color #fff
	.contacts
		@media only screen and (max-width: 1024px)
			width 45%
		@media only screen and (max-width: 768px)
			width 100%
			display flex
		@media only screen and (max-width: 640px)
			flex-direction column
		&__item
			cursor pointer
			display inline-block
			line-height 40px
			padding-left 20px
			padding-right 10px
			width 100%
			@media only screen and (max-width: 640px)
				text-align center
				padding-left 10px
			&:first-child
				border-top-left-radius 5px
				border-top-right-radius 5px
			&:nth-child(2)
				@media only screen and (max-width: 768px)
					border-bottom-left-radius 5px
					border-top-left-radius 5px
				@media only screen and (max-width: 640px)
					border-bottom-left-radius 0
					border-top-right-radius 5px
			&:last-child
				border-bottom-left-radius 5px
				border-bottom-right-radius 5px
				@media only screen and (max-width: 768px)
					border-bottom-left-radius 0
					border-top-right-radius 5px
				@media only screen and (max-width: 640px)
					border-bottom-left-radius 5px
					border-top-right-radius 0
			.contacts-link
				color #fff
				display inline-block
				padding-left 10px
				width 100%
				@media only screen and (max-width: 1024px)
					padding-left 25px
				@media only screen and (max-width: 768px)
					padding-left 0
				&__inner
					display inline-block
					font-size 16px
					line-height 16px
					padding-left 35px
					position relative
					vertical-align middle
					&:before
						content ''
						height 20px
						left 0
						top -3px
						position absolute
						width 21px
				&:hover
					.contacts-link__inner
						text-decoration underline
		&__main-item
			background-color #3ba8c0
			color #fff
			@media only screen and (max-width: 768px)
				display none
		&__mail-item
			background-color #41b9d4
			.contacts-link__inner:before
				background url('/assets/images/mail.png') no-repeat center
		&__phone-item
			background-color #48cbe8
			.contacts-link__inner:before
				background url('/assets/images/phone.png') no-repeat center
		&__skype-item
			background-color #51daf8
			.contacts-link__inner:before
				background url('/assets/images/skype.png') no-repeat center
/*---Styles elements for block of about-me----*/
.main-info__block
	&:last-child
		margin-bottom 0
	.info-title
		border-bottom 2px solid #3ba8c0
		color #3ba8c0
		display inline-block
		font-size 27px
		line-height 30px
		padding 20px
		position relative
		@media only screen and (max-width: 480px)
			font-size 24px
			border-bottom none
			display block
			text-align center
	.content-info
		display flex
		padding 25px 55px
		@media only screen and (max-width: 768px)
			padding 25px
		@media only screen and (max-width: 640px)
			flex-direction column
		@media only screen and (max-width: 480px)
			padding-top 0
		&__avatarka
			background url('/assets/images/face.jpg') no-repeat center
			background-size cover
			border 2px solid #3ba8c0
			border-radius 50%
			height 148px
			margin-right 25px
			margin-top 10px
			max-width 148px
			width 100%
			@media only screen and (max-width: 768px)
				height 200px
				max-width 200px
				margin-right 40px
			@media only screen and (max-width: 640px)
				margin-right auto
				margin-left auto
				margin-top 0
				margin-bottom 30px
		.info-item
			font-size 16px
			line-height 25px
			padding-bottom 10px
			@media only screen and (max-width: 480px)
				text-align center
			&__important
				color #4a545d
				font-size 17px
				font-weight 700
				padding-right 10px
				vertical-align top
				@media only screen and (max-width: 480px)
					display block
			.skills
				display inline-block
				width 50%
				@media only screen and (max-width: 640px)
					width 60%
				@media only screen and (max-width: 480px)
					width 100%
				&__item
					background-image linear-gradient(to top, #2e8ca2 0%, #2e8ca2 52%, #3ba8c0 53%, #3ba8c0 100%)
					border-radius 5px
					color #fff
					display inline-block
					font-size 14px
					font-weight 700
					line-height 20px
					margin-bottom 5px
					margin-right 5px
					padding-left 15px
					padding-right 15px
					@media only screen and (max-width: 768px)
						padding-left 8px
						padding-right 8px
					&:last-child
						margin-right 0
		.experience-list
			&__item
				font-size 15px
				padding-bottom 24px
				padding-left 70px
				position relative
				&:before
					background-color #3ba8c0
					content ''
					height 34px
					left 0
					position absolute
					top 0
					width 41px
				&:last-child
					padding-bottom 0
				.experience-title
					font-size 18px
					line-height 25px
			&__work:before
				background url('/assets/images/work.png') no-repeat center
			&__education:before
				background url('/assets/images/education.png') no-repeat center
			&__courses:before
				background url('/assets/images/courses.png') no-repeat center
