/*---Basic styles for header of main-page----*/
.header
	position relative
	width 100%
	background radial-gradient(circle farthest-corner at 100px 50px, #fff, #dff7ec)
	&:after
		background-color #1c667a
		background-image linear-gradient(to right, rgba(28, 102, 122, .9) 0, rgba(246, 250, 254, .9) 0, rgba(216, 216, 216, .9) 0, rgba(242, 246, 250, .9) 0, rgba(28, 102, 122, .9) 48%, rgba(242, 246, 250, .9) 100%)
		bottom 0
		content ''
		display block
		height 3px
		left 0
		position absolute
		right 0
		width 100%
		@media only screen and (max-width: 1280px)
			background-size contain
	&__wrapper
		display flex
		height 100px
		line-height 100px
		margin-left auto
		margin-right auto
		max-width 1280px
		vertical-align middle
		width 95%
		justify-content flex-end
		@media only screen and (max-width: 768px)
			width 93%
			height 55px
			line-height 55px
			justify-content space-between
	&__title
		display inline-block
		vertical-align middle
		position relative
		flex-grow 1
		@media only screen and (max-width: 768px)
			width 50%
		@media only screen and (max-width: 480px)
			width 80%
	&__title-link
		color #58697a
		font-family 'felt_tip_womanregular', sans-serif
		font-size 44px
		font-weight 700
		line-height 44px
		text-transform uppercase
		vertical-align middle
		@media only screen and (max-width: 640px)
			font-size 36px
		@media only screen and (max-width: 480px)
			font-size 28px
		&:hover
			color #3ba8c0
	&__icons
		display flex
		align-items center
		justify-content space-between
		@media only screen and (max-width: 768px)
			margin-right 30px
		@media only screen and (max-width: 480px)
			margin-right 20px
	&__menu
		display none
		@media only screen and (max-width: 768px)
			display flex
			flex-direction column
			justify-content center
			cursor pointer
	&__menu-item
		width 25px
		height 5px
		background-color #58697a
		margin-bottom 3px
		border-radius 2px
	&:hover, &:active, &:focus
		.header__menu-item
			background-color #3ba8c0
	.menu-active
		background-color #3ba8c0
/*---Styles for social icons----*/
.header__icons
	.social-icon
		display inline-block
		float right
		height 44px
		margin-left 25px
		width 44px
		overflow hidden
		border-radius 20%
		box-shadow 1px 3px 5px rgba(0, 0, 0, .3), -1px -1px 5px rgba(0, 0, 0, .3)
		&:hover
			height 40px
			width 40px
		@media only screen and (max-width: 768px)
			height 34px
			width 34px
			margin-left 15px
			&:hover
				height 32px
				width 32px
		@media only screen and (max-width: 480px)
			height 30px
			width 30px
			&:hover
				height 28px
				width 28px
		@media only screen and (max-width: 320px)
			margin-left 10px
		&:first-child
			margin-left 0
		&__inner
			display block
			height inherit
			width 100%
		&__vk
			background url('../images/vk_3.png') no-repeat center
			background-size contain
		&__fb
			background url('../images/fb_3.png') no-repeat center
			background-size contain
		&__github
			background url('../images/github_3.png') no-repeat center
			background-size contain
		&__instagram
			background url('../images/instagram.png') no-repeat center
			background-size contain
